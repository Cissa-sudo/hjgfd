<Window x:Class="SpaApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:SpaApp"
        Title="Поиск абонементов для спа и бассейнов" 
        Height="800" Width="1100"
        MinHeight="600" MinWidth="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <Style x:Key="SubscriptionCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#FFE0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,8"/>
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF2D5AA1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FF2D5AA1"/>
            <Setter Property="BorderBrush" Value="#FF2D5AA1"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid Background="#FFF5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#FF2D5AA1" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Vertical">
                    <TextBlock Text="Абонементы для спа и бассейнов" 
                      Foreground="White" FontSize="24" FontWeight="Bold"/>
                    <TextBlock Text="Найдите идеальный абонемент для отдыха и спорта" 
                      Foreground="#CCFFFFFF" FontSize="14" Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <!-- Информация о пользователе -->
                    <TextBlock Text="{Binding CurrentUser.FullName, StringFormat='Добро пожаловать, {0}!'}" 
                      Foreground="White" Margin="0,0,15,0" VerticalAlignment="Center"
                      Visibility="{Binding IsLoggedIn, Converter={StaticResource BooleanToVisibilityConverter}}"/>


                    <Button Command="{Binding CompareCommand}"
                    Background="White" 
                    Padding="15,8"
                    Margin="0,0,15,0"
                    IsEnabled="{Binding CanCompare}"
                    FontWeight="SemiBold" Cursor="Hand"
                    ToolTip="Сравнить выбранные абонементы"
                    BorderThickness="1" BorderBrush="#FF2D5AA1">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Сравнить" Foreground="#FF2D5AA1" FontSize="14"/>
                            <TextBlock Text="{Binding SelectedComparisonCount, StringFormat=' ({0})'}" 
                              Foreground="#FF2D5AA1" FontSize="14" FontWeight="Bold" Margin="2,0,0,0"/>
                        </StackPanel>
                    </Button>

                    <Button Content="Войти" Command="{Binding LoginCommand}" 
                    Background="#FF2D5AA1" Foreground="White" Padding="15,8"
                    FontWeight="SemiBold" Cursor="Hand"
                    ToolTip="Войти в систему">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsLoggedIn}" Value="False">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
               
                    <Button Content="Выйти" Command="{Binding LogoutCommand}" 
                    Background="#FFE74C3C" Foreground="White" Padding="15,8"
                    Visibility="{Binding IsLoggedIn, Converter={StaticResource BooleanToVisibilityConverter}}"
                    FontWeight="SemiBold" Cursor="Hand"
                    ToolTip="Выйти из системы"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Основной контент -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Панель фильтров -->
            <Border Grid.Column="0" Background="White" BorderBrush="LightGray" BorderThickness="1" Padding="15">
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Поиск и фильтры" FontWeight="Bold" FontSize="18" Margin="0,0,0,15" Foreground="#FF2D5AA1"/>

                    <!-- Поиск -->
                    <TextBlock Text="Поиск по названию:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                             Padding="10" FontSize="14" Margin="0,0,0,15"
                             BorderBrush="#FFDDDDDD" BorderThickness="1" Background="White"
                             ToolTip="Поиск по названию абонемента или заведения (максимум 250 символов)"
                             MaxLength="250">
                        <TextBox.InputBindings>
                            <KeyBinding Key="Enter" Command="{Binding SearchCommand}"/>
                        </TextBox.InputBindings>
                    </TextBox>

                    <!-- Тип абонемента -->
                    <TextBlock Text="Тип абонемента:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <ComboBox ItemsSource="{Binding SubscriptionTypes}" 
                              SelectedValuePath="Id"
                              SelectedValue="{Binding SelectedTypeId}"
                              Padding="8" FontSize="14" Margin="0,0,0,15"
                              BorderBrush="#FFDDDDDD" BorderThickness="1" Background="White"
                              ToolTip="Выберите тип абонемента">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical" Margin="2">
                                    <TextBlock Text="{Binding Name}" FontWeight="SemiBold" FontSize="13"/>
                                    <TextBlock Text="{Binding Description}" FontSize="11" Foreground="#666666" TextWrapping="Wrap" 
                                               MaxWidth="300" TextTrimming="CharacterEllipsis"/>
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <!-- Диапазон цен -->
                    <TextBlock Text="Диапазон цен (руб.):" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="От:" VerticalAlignment="Center" Margin="0,0,5,0" FontWeight="SemiBold"/>
                        <TextBox Text="{Binding MinPrice, UpdateSourceTrigger=PropertyChanged}" 
                                 Padding="5" Width="80" FontSize="12"
                                 BorderBrush="#FFDDDDDD" BorderThickness="1" Background="White"
                                 ToolTip="Минимальная цена (только цифры)"
                                 PreviewTextInput="NumberValidationTextBox"/>
                        <TextBlock Text="До:" VerticalAlignment="Center" Margin="10,0,5,0" FontWeight="SemiBold"/>
                        <TextBox Text="{Binding MaxPrice, UpdateSourceTrigger=PropertyChanged}" 
                                 Padding="5" Width="80" FontSize="12"
                                 BorderBrush="#FFDDDDDD" BorderThickness="1" Background="White"
                                 ToolTip="Максимальная цена (только цифры)"
                                 PreviewTextInput="NumberValidationTextBox"/>
                    </StackPanel>

                    <!-- Фильтр по рейтингу -->
                    <TextBlock Text="Минимальный рейтинг:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <ComboBox ItemsSource="{Binding RatingOptions}" 
                              SelectedValue="{Binding MinRating}"
                              SelectedValuePath="Value"
                              DisplayMemberPath="Key"
                              Padding="8" FontSize="14" Margin="0,0,0,15"
                              BorderBrush="#FFDDDDDD" BorderThickness="1" Background="White"
                              ToolTip="Выберите минимальный рейтинг"/>

                    <!-- Сортировка -->
                    <TextBlock Text="Сортировка:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <ComboBox ItemsSource="{Binding SortOptions}" 
                              SelectedValue="{Binding SelectedSortOption}"
                              SelectedValuePath="Value"
                              DisplayMemberPath="Key"
                              Padding="8" FontSize="14" Margin="0,0,0,20"
                              BorderBrush="#FFDDDDDD" BorderThickness="1" Background="White"
                              ToolTip="Выберите способ сортировки"/>

                    <!-- Кнопки управления фильтрами -->
                    <StackPanel Orientation="Vertical">
                        <Button Content="Применить фильтры" Command="{Binding SearchCommand}" 
                                Style="{StaticResource PrimaryButtonStyle}"
                                ToolTip="Применить выбранные фильтры"/>

                        <Button Content="Сбросить фильтры" Command="{Binding ResetFiltersCommand}" 
                                Style="{StaticResource SecondaryButtonStyle}" 
                                Margin="0,10,0,0"
                                ToolTip="Сбросить все фильтры"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Список абонементов -->
            <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto" Margin="15,0,0,0">
                <Grid>
                    <!-- Основной список абонементов -->
                    <ItemsControl ItemsSource="{Binding Subscriptions}" 
                                  Visibility="{Binding HasSubscriptions, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource SubscriptionCardStyle}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Основная информация -->
                                        <StackPanel Grid.Column="0" Orientation="Vertical">
                                            <!-- Заголовок, тип и рейтинг -->
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                                <TextBlock Text="{Binding Name}" 
                                                           FontWeight="Bold" FontSize="18" Foreground="#FF2D5AA1"/>

                                                <!-- Блок типа с цветами через DataTrigger -->
                                                <Border Padding="8,4" Margin="10,0,0,0">
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Setter Property="Background" Value="#FF95A5A6"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding TypeName}" Value="Бассейн">
                                                                    <Setter Property="Background" Value="#FF3498DB"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding TypeName}" Value="Спа">
                                                                    <Setter Property="Background" Value="#FF9B59B6"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding TypeName}" Value="Комбинированный">
                                                                    <Setter Property="Background" Value="#FF2ECC71"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding TypeName}" Value="Детский">
                                                                    <Setter Property="Background" Value="#FFF1C40F"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding TypeName}" Value="Взрослый">
                                                                    <Setter Property="Background" Value="#FFE67E22"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                    <TextBlock Text="{Binding TypeName}" 
                                                               FontSize="11" FontWeight="Bold" Foreground="White"/>
                                                </Border>
                                            </StackPanel>

                                            <!-- Рейтинг -->
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                                <TextBlock Text="⭐" FontSize="14" Margin="0,0,5,0"/>
                                                <TextBlock Text="{Binding Rating, StringFormat='{}{0:F1}'}" 
                                                           FontWeight="Bold" FontSize="14" Foreground="#FFA500"/>
                                                <TextBlock Text="/5.0" FontSize="12" Foreground="#888888" 
                                                          VerticalAlignment="Bottom" Margin="2,0,0,1"/>
                                            </StackPanel>

                                            <!-- Заведение -->
                                            <TextBlock Text="{Binding FacilityName}" 
                                                       FontSize="16" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="#FF555555"/>

                                            <!-- Описание -->
                                            <TextBlock Text="{Binding Description}" 
                                                       TextWrapping="Wrap" Margin="0,0,0,10" FontSize="14" Foreground="#FF666666"/>

                                            <!-- Особенности -->
                                            <StackPanel Orientation="Vertical" Margin="0,0,0,5">
                                                <TextBlock Text="Включенные услуги:" FontWeight="SemiBold" FontSize="13" Margin="0,0,0,3"/>
                                                <TextBlock Text="{Binding Features}" 
                                                           FontSize="13" Foreground="#FF2D5AA1" TextWrapping="Wrap"/>
                                            </StackPanel>

                                            <!-- Контакты -->
                                            <StackPanel Orientation="Vertical" Margin="0,10,0,0">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="📍" FontSize="12" Margin="0,0,5,0"/>
                                                    <TextBlock Text="{Binding Address}" FontSize="12" Foreground="#FF888888"/>
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                                                    <TextBlock Text="📞" FontSize="12" Margin="0,0,5,0"/>
                                                    <TextBlock Text="{Binding Phone}" FontSize="12" Foreground="#FF888888"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </StackPanel>

                                        <!-- Цена и детали -->
                                        <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Right" MinWidth="150">
                                            <!-- Цена -->
                                            <Border Background="#FFF0F8FF" Padding="15,10" BorderBrush="#FF2D5AA1" BorderThickness="1">
                                                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                                                    <TextBlock Text="Цена" FontSize="12" Foreground="#666666" HorizontalAlignment="Center"/>
                                                    <TextBlock Text="{Binding Price, StringFormat='{}{0} руб.'}" 
                                                               FontWeight="Bold" FontSize="20" Foreground="#FF2D5AA1" HorizontalAlignment="Center"/>
                                                </StackPanel>
                                            </Border>

                                            <!-- Детали -->
                                            <StackPanel Orientation="Vertical" Margin="0,10,0,0">
                                                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                                    <TextBlock Text="🕐" FontSize="11" Margin="0,0,5,0"/>
                                                    <TextBlock Text="{Binding DurationDays, StringFormat='{}Длительность: {0} дней'}" 
                                                               FontSize="12" Foreground="#FF666666"/>
                                                </StackPanel>

                                                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                                    <TextBlock Text="👥" FontSize="11" Margin="0,0,5,0"/>
                                                    <TextBlock Text="{Binding VisitsCount, StringFormat='{}Посещений: {0}'}" 
                                                               FontSize="12" Foreground="#FF666666"/>
                                                </StackPanel>
                                            </StackPanel>

                                            <!-- Кнопка добавления/удаления из сравнения -->
                                            <Button Command="{Binding DataContext.AddToComparisonCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding}"
                                                    Background="#FF2D5AA1" Foreground="White" 
                                                    Padding="10,8" FontSize="12" FontWeight="SemiBold" 
                                                    BorderThickness="0"
                                                    Cursor="Hand" Margin="0,15,0,0"
                                                    ToolTip="Добавить абонемент к сравнению">
                                                <Button.Content>
                                                    <TextBlock Text="Добавить к сравнению"/>
                                                </Button.Content>
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Сообщение, если абонементы не найдены -->
                    <StackPanel Orientation="Vertical" 
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center"
                                Margin="20">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding HasSubscriptions}" Value="False">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>

                        <TextBlock Text="😕" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                        <TextBlock Text="К сожалению, по вашему запросу ничего не найдено" 
                                  FontSize="18" Foreground="#FF666666" HorizontalAlignment="Center" 
                                  TextAlignment="Center" FontWeight="SemiBold" Margin="0,0,0,10"/>

                        <TextBlock Text="Попробуйте изменить параметры поиска:" 
                                  FontSize="14" Foreground="#888888" HorizontalAlignment="Center" 
                                  TextAlignment="Center" Margin="0,0,0,20"/>

                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <TextBlock Text="• Упростите поисковый запрос" FontSize="13" Foreground="#FF666666" Margin="0,0,0,5"/>
                            <TextBlock Text="• Выберите другой тип абонемента" FontSize="13" Foreground="#FF666666" Margin="0,0,0,5"/>
                            <TextBlock Text="• Расширьте диапазон цен" FontSize="13" Foreground="#FF666666" Margin="0,0,0,5"/>
                            <TextBlock Text="• Понизьте минимальный рейтинг" FontSize="13" Foreground="#FF666666" Margin="0,0,0,5"/>
                            <TextBlock Text="• Сбросьте фильтры и посмотрите все предложения" FontSize="13" Foreground="#FF666666"/>
                        </StackPanel>

                        <Button Content="Показать все абонементы" 
                                Command="{Binding ResetFiltersCommand}"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Margin="0,25,0,0" Padding="20,12"
                                ToolTip="Сбросить все фильтры и показать все абонементы"/>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
