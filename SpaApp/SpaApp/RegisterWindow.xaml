<Window x:Class="SpaApp.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация" 
        Height="600" Width="450"
        MinHeight="750" MinWidth="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">

    <Window.Resources>
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF2D5AA1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style x:Key="BackButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FF666666"/>
            <Setter Property="BorderBrush" Value="#FF666666"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid Background="White">
        <Border BorderBrush="#DDDDDD" BorderThickness="1" CornerRadius="5" Margin="40">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="15">
                <StackPanel Orientation="Vertical" Margin="15">
                    <TextBlock Text="Регистрация" 
                              FontSize="26" FontWeight="Bold" 
                              HorizontalAlignment="Center" Margin="0,0,0,35"
                              Foreground="#FF2D5AA1"/>

                    <TextBlock Text="Полное имя:" Margin="0,0,0,8" FontWeight="SemiBold" FontSize="14"/>
                    <TextBox x:Name="txtFullName" Padding="12" Margin="0,0,0,20" FontSize="14" 
                             BorderBrush="#FFDDDDDD" BorderThickness="1" Height="40"
                             TextChanged="txtFullName_TextChanged"/>

                    <TextBlock Text="Email:" Margin="0,0,0,8" FontWeight="SemiBold" FontSize="14"/>
                    <TextBox x:Name="txtEmail" Padding="12" Margin="0,0,0,20" FontSize="14"
                             BorderBrush="#FFDDDDDD" BorderThickness="1" Height="40"
                             TextChanged="txtEmail_TextChanged"/>

                    <TextBlock Text="Имя пользователя:" Margin="0,0,0,8" FontWeight="SemiBold" FontSize="14"/>
                    <TextBox x:Name="txtUsername" Padding="12" Margin="0,0,0,20" FontSize="14"
                             BorderBrush="#FFDDDDDD" BorderThickness="1" Height="40"
                             TextChanged="txtUsername_TextChanged"/>

                    <TextBlock Text="Пароль:" Margin="0,0,0,8" FontWeight="SemiBold" FontSize="14"/>
                    <PasswordBox x:Name="txtPassword" Padding="12" Margin="0,0,0,30" FontSize="14"
                                 BorderBrush="#FFDDDDDD" BorderThickness="1" Height="40"
                                 PasswordChanged="txtPassword_PasswordChanged"/>

                    <Button Content="Зарегистрироваться" Click="RegisterButton_Click" 
                            Style="{StaticResource PrimaryButtonStyle}" Margin="0,15,0,20" Height="45"/>

                    <Button Content="Назад" Click="BackButton_Click" 
                            Style="{StaticResource BackButtonStyle}" 
                            HorizontalAlignment="Center" Width="100" Height="35"/>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
