<Window x:Class="SpaApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход в систему" 
        Height="550" Width="400"
        MinHeight="730" MinWidth="380"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">

    <Window.Resources>
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF2D5AA1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FF2D5AA1"/>
            <Setter Property="BorderBrush" Value="#FF2D5AA1"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style x:Key="GuestButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF27AE60"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style x:Key="BackButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FF666666"/>
            <Setter Property="BorderBrush" Value="#FF666666"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid Background="White">
        <Border BorderBrush="#DDDDDD" BorderThickness="1" CornerRadius="5" Margin="40">
            <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="25">
                <TextBlock Text="Вход в систему" 
                          FontSize="26" FontWeight="Bold" 
                          HorizontalAlignment="Center" Margin="0,0,0,30"
                          Foreground="#FF2D5AA1"/>

                <TextBlock Text="Имя пользователя:" Margin="0,0,0,8" FontWeight="SemiBold" FontSize="14"/>
                <TextBox x:Name="txtUsername" Padding="12" Margin="0,0,0,15" FontSize="14" 
                         BorderBrush="#FFDDDDDD" BorderThickness="1" Height="40"/>

                <TextBlock Text="Пароль:" Margin="0,0,0,8" FontWeight="SemiBold" FontSize="14"/>
                <PasswordBox x:Name="txtPassword" Padding="12" Margin="0,0,0,25" FontSize="14"
                             BorderBrush="#FFDDDDDD" BorderThickness="1" Height="40"/>

                <Button Content="Войти" Click="LoginButton_Click" 
                        Style="{StaticResource PrimaryButtonStyle}" Margin="0,0,0,12" Height="45"/>

                <TextBlock Text="Нет аккаунта?" HorizontalAlignment="Center" Margin="0,8,0,12"
                          Foreground="#666666" FontSize="14"/>

                <Button Content="Зарегистрироваться" Click="RegisterButton_Click" 
                        Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,0,15" Height="45"/>

                <TextBlock Text="или" HorizontalAlignment="Center" Margin="0,0,0,12"
                          Foreground="#666666" FontStyle="Italic" FontSize="14"/>

                <Button Content="Войти как гость" Click="GuestLoginButton_Click" 
                        Style="{StaticResource GuestButtonStyle}" Margin="0,0,0,20" Height="45"/>

                <Button Content="Назад" Click="BackButton_Click" 
                        Style="{StaticResource BackButtonStyle}" 
                        HorizontalAlignment="Center" Width="100" Height="35"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>