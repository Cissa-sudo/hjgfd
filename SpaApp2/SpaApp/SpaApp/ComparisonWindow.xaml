<Window x:Class="SpaApp.ComparisonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Сравнение абонементов" 
        Height="600" Width="1200"
        MinHeight="400" MinWidth="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#FFF5F5F5"
        Icon="spa_icon.png">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <Style x:Key="ComparisonHeaderStyle" TargetType="Border">
            <Setter Property="Background" Value="#FF2D5AA1"/>
            <Setter Property="BorderBrush" Value="#FF2D5AA1"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="15,10"/>
        </Style>

        <Style x:Key="ComparisonCellStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#FFE0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10"/>
        </Style>

        <Style x:Key="FeatureNameStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#FF555555"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextWrapping" Value="NoWrap"/>
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
        </Style>

        <Style x:Key="FeatureValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#FF333333"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" Background="#FF2D5AA1" Padding="20">
            <TextBlock Text="Сравнение абонементов" 
                       Foreground="White" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center"
                       TextWrapping="NoWrap" TextTrimming="CharacterEllipsis" MaxWidth="500"/>
        </Border>

        <!-- Таблица сравнения -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Margin="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Заголовки столбцов -->
                <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource ComparisonHeaderStyle}">
                    <TextBlock Text="Характеристики" 
                               Foreground="White" 
                               FontWeight="Bold" 
                               FontSize="16"
                               TextWrapping="NoWrap" TextTrimming="CharacterEllipsis" MaxWidth="180"/>
                </Border>

                <Border Grid.Row="0" Grid.Column="1" Style="{StaticResource ComparisonHeaderStyle}">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <TextBlock Text="{Binding Subscriptions[0].Name}" 
                                   Foreground="White" 
                                   FontWeight="Bold" 
                                   FontSize="16"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"
                                   TextTrimming="CharacterEllipsis" MaxWidth="250"/>
                        <TextBlock Text="{Binding Subscriptions[0].TypeName}" 
                                   Foreground="#CCFFFFFF" 
                                   FontSize="12"
                                   TextAlignment="Center"
                                   Margin="0,5,0,0"
                                   TextWrapping="NoWrap" TextTrimming="CharacterEllipsis" MaxWidth="200"/>
                    </StackPanel>
                </Border>

                <Border Grid.Row="0" Grid.Column="2" Style="{StaticResource ComparisonHeaderStyle}">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <TextBlock Text="{Binding Subscriptions[1].Name}" 
                                   Foreground="White" 
                                   FontWeight="Bold" 
                                   FontSize="16"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"
                                   TextTrimming="CharacterEllipsis" MaxWidth="250"/>
                        <TextBlock Text="{Binding Subscriptions[1].TypeName}" 
                                   Foreground="#CCFFFFFF" 
                                   FontSize="12"
                                   TextAlignment="Center"
                                   Margin="0,5,0,0"
                                   TextWrapping="NoWrap" TextTrimming="CharacterEllipsis" MaxWidth="200"/>
                    </StackPanel>
                </Border>

                <Border Grid.Row="0" Grid.Column="3" Style="{StaticResource ComparisonHeaderStyle}" 
                        Visibility="{Binding HasThirdSubscription, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <TextBlock Text="{Binding Subscriptions[2].Name}" 
                                   Foreground="White" 
                                   FontWeight="Bold" 
                                   FontSize="16"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"
                                   TextTrimming="CharacterEllipsis" MaxWidth="250"/>
                        <TextBlock Text="{Binding Subscriptions[2].TypeName}" 
                                   Foreground="#CCFFFFFF" 
                                   FontSize="12"
                                   TextAlignment="Center"
                                   Margin="0,5,0,0"
                                   TextWrapping="NoWrap" TextTrimming="CharacterEllipsis" MaxWidth="200"/>
                    </StackPanel>
                </Border>

                <!-- Строки сравнения -->
                <!-- Цена -->
                <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource ComparisonCellStyle}">
                    <TextBlock Text="Цена" Style="{StaticResource FeatureNameStyle}" MaxWidth="180"/>
                </Border>
                <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource ComparisonCellStyle}">
                    <TextBlock Text="{Binding Subscriptions[0].Price, StringFormat='{}{0} руб.'}" 
                               Style="{StaticResource FeatureValueStyle}" 
                               FontWeight="Bold" 
                               Foreground="#FF2D5AA1"
                               TextTrimming="CharacterEllipsis" MaxWidth="250"/>
                </Border>
                <Border Grid.Row="1" Grid.Column="2" Style="{StaticResource ComparisonCellStyle}">
                    <TextBlock Text="{Binding Subscriptions[1].Price, StringFormat='{}{0} руб.'}" 
                               Style="{StaticResource FeatureValueStyle}" 
                               FontWeight="Bold" 
                               Foreground="#FF2D5AA1"
                               TextTrimming="CharacterEllipsis" MaxWidth="250"/>
                </Border>
                <Border Grid.Row="1" Grid.Column="3" Style="{StaticResource ComparisonCellStyle}" 
                        Visibility="{Binding HasThirdSubscription, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <TextBlock Text="{Binding Subscriptions[2].Price, StringFormat='{}{0} руб.'}" 
                               Style="{StaticResource FeatureValueStyle}" 
                               FontWeight="Bold" 
                               Foreground="#FF2D5AA1"
                               TextTrimming="CharacterEllipsis" MaxWidth="250"/>
                </Border>

                <!-- Рейтинг -->
                <Border Grid.Row="2" Grid.Column="0" Style="{StaticResource ComparisonCellStyle}">
                    <TextBlock Text="Рейтинг" Style="{StaticResource FeatureNameStyle}" MaxWidth="180"/>
                </Border>
                <Border Grid.Row="2" Grid.Column="1" Style="{StaticResource ComparisonCellStyle}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="⭐" FontSize="14" Margin="0,0,5,0"
                                  TextWrapping="NoWrap"/>
                        <TextBlock Text="{Binding Subscriptions[0].Rating, StringFormat='{}{0:F1}'}" 
                                   Style="{StaticResource FeatureValueStyle}" 
                                   FontWeight="Bold" 
                                   Foreground="#FFA500"
                                   TextTrimming="CharacterEllipsis" MaxWidth="200"/>
                    </StackPanel>
                </Border>
                <Border Grid.Row="2" Grid.Column="2" Style="{StaticResource ComparisonCellStyle}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="⭐" FontSize="14" Margin="0,0,5,0"
                                  TextWrapping="NoWrap"/>
                        <TextBlock Text="{Binding Subscriptions[1].Rating, StringFormat='{}{0:F1}'}" 
                                   Style="{StaticResource FeatureValueStyle}" 
                                   FontWeight="Bold" 
                                   Foreground="#FFA500"
                                   TextTrimming="CharacterEllipsis" MaxWidth="200"/>
                    </StackPanel>
                </Border>
                <Border Grid.Row="2" Grid.Column="3" Style="{StaticResource ComparisonCellStyle}" 
                        Visibility="{Binding HasThirdSubscription, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="⭐" FontSize="14" Margin="0,0,5,0"
                                  TextWrapping="NoWrap"/>
                        <TextBlock Text="{Binding Subscriptions[2].Rating, StringFormat='{}{0:F1}'}" 
                                   Style="{StaticResource FeatureValueStyle}" 
                                   FontWeight="Bold" 
                                   Foreground="#FFA500"
                                   TextTrimming="CharacterEllipsis" MaxWidth="200"/>
                    </StackPanel>
                </Border>

                <!-- Заведение -->
                <Border Grid.Row="3" Grid.Column="0" Style="{StaticResource ComparisonCellStyle}">
                    <TextBlock Text="Заведение" Style="{StaticResource FeatureNameStyle}" MaxWidth="180"/>
                </Border>
                <Border Grid.Row="3" Grid.Column="1" Style="{StaticResource ComparisonCellStyle}">
                    <TextBlock Text="{Binding Subscriptions[0].FacilityName}" Style="{StaticResource FeatureValueStyle}"
                              TextTrimming="CharacterEllipsis" MaxWidth="250"/>
                </Border>
                <Border Grid.Row="3" Grid.Column="2" Style="{StaticResource ComparisonCellStyle}">
                    <TextBlock Text="{Binding Subscriptions[1].FacilityName}" Style="{StaticResource FeatureValueStyle}"
                              TextTrimming="CharacterEllipsis" MaxWidth="250"/>
                </Border>
                <Border Grid.Row="3" Grid.Column="3" Style="{StaticResource ComparisonCellStyle}" 
                        Visibility="{Binding HasThirdSubscription, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <TextBlock Text="{Binding Subscriptions[2].FacilityName}" Style="{StaticResource FeatureValueStyle}"
                              TextTrimming="CharacterEllipsis" MaxWidth="250"/>
                </Border>

                <!-- Описание -->
                <Border Grid.Row="4" Grid.Column="0" Style="{StaticResource ComparisonCellStyle}">
                    <TextBlock Text="Описание" Style="{StaticResource FeatureNameStyle}" MaxWidth="180"/>
                </Border>
                <Border Grid.Row="4" Grid.Column="1" Style="{StaticResource ComparisonCellStyle}">
                    <TextBlock Text="{Binding Subscriptions[0].Description}" Style="{StaticResource FeatureValueStyle}"
                              MaxHeight="80"/>
                </Border>
                <Border Grid.Row="4" Grid.Column="2" Style="{StaticResource ComparisonCellStyle}">
                    <TextBlock Text="{Binding Subscriptions[1].Description}" Style="{StaticResource FeatureValueStyle}"
                              MaxHeight="80"/>
                </Border>
                <Border Grid.Row="4" Grid.Column="3" Style="{StaticResource ComparisonCellStyle}" 
                        Visibility="{Binding HasThirdSubscription, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <TextBlock Text="{Binding Subscriptions[2].Description}" Style="{StaticResource FeatureValueStyle}"
                              MaxHeight="80"/>
                </Border>

                <!-- Особенности -->
                <Border Grid.Row="5" Grid.Column="0" Style="{StaticResource ComparisonCellStyle}">
                    <TextBlock Text="Включенные услуги" Style="{StaticResource FeatureNameStyle}" MaxWidth="180"/>
                </Border>
                <Border Grid.Row="5" Grid.Column="1" Style="{StaticResource ComparisonCellStyle}">
                    <TextBlock Text="{Binding Subscriptions[0].Features}" Style="{StaticResource FeatureValueStyle}"
                              MaxHeight="60"/>
                </Border>
                <Border Grid.Row="5" Grid.Column="2" Style="{StaticResource ComparisonCellStyle}">
                    <TextBlock Text="{Binding Subscriptions[1].Features}" Style="{StaticResource FeatureValueStyle}"
                              MaxHeight="60"/>
                </Border>
                <Border Grid.Row="5" Grid.Column="3" Style="{StaticResource ComparisonCellStyle}" 
                        Visibility="{Binding HasThirdSubscription, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <TextBlock Text="{Binding Subscriptions[2].Features}" Style="{StaticResource FeatureValueStyle}"
                              MaxHeight="60"/>
                </Border>

                <!-- Длительность -->
                <Border Grid.Row="6" Grid.Column="0" Style="{StaticResource ComparisonCellStyle}">
                    <TextBlock Text="Длительность" Style="{StaticResource FeatureNameStyle}" MaxWidth="180"/>
                </Border>
                <Border Grid.Row="6" Grid.Column="1" Style="{StaticResource ComparisonCellStyle}">
                    <TextBlock Text="{Binding Subscriptions[0].DurationDays, StringFormat='{}{0} дней'}" Style="{StaticResource FeatureValueStyle}"
                              TextTrimming="CharacterEllipsis" MaxWidth="250"/>
                </Border>
                <Border Grid.Row="6" Grid.Column="2" Style="{StaticResource ComparisonCellStyle}">
                    <TextBlock Text="{Binding Subscriptions[1].DurationDays, StringFormat='{}{0} дней'}" Style="{StaticResource FeatureValueStyle}"
                              TextTrimming="CharacterEllipsis" MaxWidth="250"/>
                </Border>
                <Border Grid.Row="6" Grid.Column="3" Style="{StaticResource ComparisonCellStyle}" 
                        Visibility="{Binding HasThirdSubscription, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <TextBlock Text="{Binding Subscriptions[2].DurationDays, StringFormat='{}{0} дней'}" Style="{StaticResource FeatureValueStyle}"
                              TextTrimming="CharacterEllipsis" MaxWidth="250"/>
                </Border>

                <!-- Количество посещений -->
                <Border Grid.Row="7" Grid.Column="0" Style="{StaticResource ComparisonCellStyle}">
                    <TextBlock Text="Количество посещений" Style="{StaticResource FeatureNameStyle}" MaxWidth="180"/>
                </Border>
                <Border Grid.Row="7" Grid.Column="1" Style="{StaticResource ComparisonCellStyle}">
                    <TextBlock Text="{Binding Subscriptions[0].VisitsCount}" Style="{StaticResource FeatureValueStyle}"
                              TextTrimming="CharacterEllipsis" MaxWidth="250"/>
                </Border>
                <Border Grid.Row="7" Grid.Column="2" Style="{StaticResource ComparisonCellStyle}">
                    <TextBlock Text="{Binding Subscriptions[1].VisitsCount}" Style="{StaticResource FeatureValueStyle}"
                              TextTrimming="CharacterEllipsis" MaxWidth="250"/>
                </Border>
                <Border Grid.Row="7" Grid.Column="3" Style="{StaticResource ComparisonCellStyle}" 
                        Visibility="{Binding HasThirdSubscription, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <TextBlock Text="{Binding Subscriptions[2].VisitsCount}" Style="{StaticResource FeatureValueStyle}"
                              TextTrimming="CharacterEllipsis" MaxWidth="250"/>
                </Border>
            </Grid>
        </ScrollViewer>

        <!-- Панель управления сравнением -->
        <Border Grid.Row="2" Background="#FFE3F2FD" BorderBrush="#FF2D5AA1" BorderThickness="0,1,0,0" 
                Padding="15,10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Управление сравнением:" 
                           FontWeight="SemiBold" FontSize="14" 
                           Foreground="#FF2D5AA1" VerticalAlignment="Center" Margin="0,0,15,0"
                           TextWrapping="NoWrap" TextTrimming="CharacterEllipsis" MaxWidth="200"/>

                <ItemsControl ItemsSource="{Binding Subscriptions}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White" BorderBrush="#FF2D5AA1" BorderThickness="1" 
                                    CornerRadius="3" Margin="5,0" Padding="8,4">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Name}" FontSize="12" FontWeight="SemiBold" 
                                               Foreground="#FF2D5AA1" MaxWidth="150" TextTrimming="CharacterEllipsis"/>
                                    <Button Content="×" FontSize="14" FontWeight="Bold" 
                                            Foreground="#FFE74C3C" Background="Transparent" 
                                            BorderThickness="0" Padding="5,0" Margin="5,0,0,0"
                                            Cursor="Hand" ToolTip="Удалить из сравнения"
                                            Click="RemoveSubscription_Click"
                                            Tag="{Binding}"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <Button Content="Очистить всё" 
                        Background="Transparent" 
                        Foreground="#FFE74C3C" 
                        BorderBrush="#FFE74C3C"
                        BorderThickness="1"
                        Padding="10,5" FontSize="12" Margin="10,0,0,0"
                        FontWeight="SemiBold" Cursor="Hand"
                        ToolTip="Очистить все абонементы из сравнения"
                        Click="ClearComparison_Click">
                    <Button.ContentTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" 
                                      TextWrapping="NoWrap" TextTrimming="CharacterEllipsis" MaxWidth="100"/>
                        </DataTemplate>
                    </Button.ContentTemplate>
                </Button>

                <Button Content="Закрыть" 
                        Background="#FF2D5AA1" Foreground="White" 
                        Padding="15,8" FontSize="12" Margin="15,0,0,0"
                        FontWeight="SemiBold" Cursor="Hand"
                        ToolTip="Закрыть окно сравнения"
                        Click="CloseButton_Click">
                    <Button.ContentTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" 
                                      TextWrapping="NoWrap" TextTrimming="CharacterEllipsis" MaxWidth="80"/>
                        </DataTemplate>
                    </Button.ContentTemplate>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>